@using Microsoft.AspNetCore.Http;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <!--Bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- DataTables -->
    <link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <!--Font awesome-->
    <link href="~/lib/fontawesome/css/all.css" rel="stylesheet" />
    <!--Owl carousel-->
    <link href="~/lib/owlCarousel/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/lib/owlCarousel/owl.theme.default.min.css" rel="stylesheet" />
    <!--Custom-->
    <link href="~/css/Layout.css" rel="stylesheet" />
</head>
<body class="d-flex flex-column min-vh-100">
    <nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <div class="collapse navbar-collapse"></div>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item px-5">
                        <h5><a asp-controller="Home" asp-action="Index" class="nav-link">Trang chủ</a></h5>
                    </li>
                    <li class="nav-item px-5">
                        <h5><a asp-controller="Product" asp-action="Index" class="nav-link">Sản phẩm</a></h5>
                    </li>
                    @*<li class="nav-item px-5">
                            <h5><a class="nav-link">Giới thiệu</a></h5>
                        </li>
                        <li class="nav-item px-5">
                            <h5><a class="nav-link">Liên hệ</a></h5>
                        </li>*@
                </ul>
                <ul class="navbar-nav">
                    <li>
                        @if (Context.Session.GetString("UserMember") != null)
                        {
                            <a asp-controller="User" asp-action="Info"><i class="fa fa-light fa-user fa-2xl" style="color:white"></i></a>
                        }
                        else
                        {
                            <a id="userButton"><i class="fa fa-light fa-user fa-2xl" style="color:white"></i></a>
                        }
                    </li>
                    <li>
                        <a asp-controller="Checkout" asp-action="Index"><i class="fa fa-light fa-cart-shopping fa-2xl" style="color:white"></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div id="loginRegisterModal"></div>

    @RenderBody()

    <footer class=" bg-dark text-white pt-5 pb-4 mt-auto">
        <div class="container">
            <div class="row text-left">
                <div class="col-3 mx-auto mt-3">
                    <h5 class="text-uppercase font-weight-bold">Liên hệ</h5>
                    <p><strong>Địa chỉ:</strong> 94 Lê Thanh Nghị, Bách Khoa, Hai Bà Trưng, Hà Nội</p>
                    <p><strong>Số điện thoại:</strong> 0352398695</p>
                    <p><strong>Giờ mở cửa:</strong> 8:00 - 17:30, thứ 2 - thứ 6</p>
                </div>
                <div class="col-2 mx-auto mt-3">
                    <h5 class="text-uppercase font-weight-bold">Giới thiệu</h5>
                    <p><a href="#" class="text-white">Về chúng tôi</a></p>
                    <p><a href="#" class="text-white">Chính sách đổi trả</a></p>
                    <p><a href="#" class="text-white">Chính sách riêng tư</a></p>
                    <p><a href="#" class="text-white">Liên hệ</a></p>
                </div>
                <div class="col-2 mx-auto mt-3">
                    <h5 class="text-uppercase font-weight-bold">Tài khoản</h5>
                    <p><a href="#" class="text-white">Đăng nhập</a></p>
                    <p><a href="#" class="text-white">Xem giỏ hàng</a></p>
                    <p><a href="#" class="text-white">Xem đơn hàng</a></p>
                </div>
            </div>
        </div>
    </footer>

    <!--Jquery-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 5 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!--Boostrap growl-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-growl/1.0.0/jquery.bootstrap-growl.min.js"></script>
    <!--Owl carousel-->
    <script src="~/lib/owlCarousel/owl.carousel.min.js"></script>
    <!-- DataTables-->
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <!--Validate-->
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <!--Custom JS-->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
