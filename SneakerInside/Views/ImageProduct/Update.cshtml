@model SneakerInside.Models.ImageProductGetAndUpdate

@{
    Layout = null;
}

<form asp-action="Update" enctype="multipart/form-data" onsubmit="return submitUpdate(this);">
    <div class="form-group">
        <input type="hidden" asp-for="ImageID" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ImageFile" class="control-label"></label>
        <div class="custom-file">
            <input asp-for="ImageFile" accept="image/*" class="custom-file-input" id="customFile" />
            <label class="custom-file-label" for="customFile">@Model.Image</label>
        </div>
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>
    <div class="form-group">
        <img src="@("~/Images/" + Model.Image)" asp-append-version="true" width="300" />
    </div>
    <div class="form-group">
        <label asp-for="ProductID" class="control-label"></label>
        <select asp-for="ProductID" class="form-control" asp-items="@ViewBag.dropDownProduct"></select>
        <span asp-validation-for="ProductID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Chỉnh sửa" class="btn btn-info btn-block" />
    </div>
</form>

@section Scripts {
    <script type="text/javascript">
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}
