@model SneakerInside.Models.ImageProductGetAndUpdate

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-6">
    <div class="card card-warning">
        <div class="card-header">
            <h3 class="card-title">Chỉnh sửa @ViewBag.Name</h3>
        </div>
        <form asp-action="Edit">
            <div class="card-body">
                <div class="form-group">
                    <input type="hidden" asp-for="ImageID" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="ImageFile" class="control-label"></label>
                    <div class="custom-file">
                        <input asp-for="ImageFile" accept="image/*" class="custom-file-input" id="customFile" />
                        <label class="custom-file-label" for="customFile">@Model.Image</label>
                    </div>
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <img src="@("~/Images/" + Model.Image)" asp-append-version="true" width="300" />
                </div>
                <div class="form-group">
                    <label asp-for="ProductID" class="control-label"></label>
                    <input asp-for="ProductID" class="form-control" />
                    <span asp-validation-for="ProductID" class="text-danger"></span>
                </div>
            </div>
            <div class="card-footer">
                <input type="submit" value="Chỉnh sửa" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}
