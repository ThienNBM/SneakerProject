@model SneakerInside.Models.SizeGetAndUpdate

@{
    Layout = null;
}

<form asp-action="Update" onsubmit="return submitUpdate(this);" autocomplete="off">
    <div class="form-group">
        <input type="hidden" asp-for="SizeID" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SizeName" class="control-label"></label>
        <input asp-for="SizeName" class="form-control" />
        <span asp-validation-for="SizeName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Chỉnh sửa" class="btn btn-info btn-block" />
    </div>
</form>