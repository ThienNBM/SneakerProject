@{
    ViewData["Title"] = "Danh sách khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-secondary">
    <div class="card-header">
        <h3 class="card-title">Danh sách khách hàng</h3>
    </div>
    <div class="card-body">
        <table id="userTable" class="table table-bordered table-hover" width="100%">
            <thead>
                <tr>
                    <th>
                        Danh sách đơn hàng
                    </th>
                    <th>
                        Họ và tên
                    </th>
                    <th>
                        Số điện thoại
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Địa chỉ
                    </th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-6">
        <div class="card card-secondary">
            <div class="card-header">
                <h3 class="card-title">Danh sách đơn hàng</h3>
            </div>
            <div class="card-body">
                <table id="orderTable" class="table table-bordered table-hover" width="100%">
                    <thead>
                        <tr>
                            <th>
                                Chi tiết đơn hàng
                            </th>
                            <th>
                                Mã đơn hàng
                            </th>
                            <th>
                                Ngày tạo
                            </th>
                            <th>
                                Ghi chú
                            </th>
                            <th>
                                Tổng đơn hàng
                            </th>
                            <th>
                                Trạng thái
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
    <div class="col-6">
        <div class="card card-secondary">
            <div class="card-header">
                <h3 class="card-title">Chi tiết đơn hàng</h3>
            </div>
            <div class="card-body">
                <table id="orderDetailTable" class="table table-bordered table-hover" width="100%">
                    <thead>
                        <tr>
                            <th>
                                Ảnh
                            </th>
                            <th>
                                Tên sản phẩm
                            </th>
                            <th>
                                Size
                            </th>
                            <th>
                                Giá mua
                            </th>
                            <th>
                                Số lượng mua
                            </th>
                            <th>
                                Tổng
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        //Lấy dữ liệu lên bảng
        $(document).ready(function () {
            $('#userTable').DataTable({
                ajax: {
                    url: '@Url.Action("GetAll", "User")',
                    type: 'GET',
                    datatype: 'json'
                },
                columns: [
                    {
                        data: 'userID',
                        render: function (data) {
                            return '<button type="button" class="btn btn-info" onclick="getOrderTable(' + data + ')"><i class="fas fa-edit"></i></button >';
                        },
                        orderable: false
                    },
                    {
                        data: 'fullName'
                    },
                    {
                        data: 'phone'
                    },
                    {
                        data: 'email'
                    },
                    {
                        data: 'address'
                    }
                ]
            });
        });

        //Hàm lấy danh sách đơn hàng theo người dùng
        function getOrderTable(data) {
            $('#orderDetailTable').DataTable().clear().draw();
            $('#orderTable').DataTable({
                ajax: {
                    url: '@Url.Action("GetOrderById", "User")/' + data,
                    type: 'GET',
                    datatype: 'json'
                },
                columns: [
                    {
                        data: 'orderID',
                        render: function (data) {
                            return '<button type="button" class="btn btn-info" onclick="getOrderDetailTable(' + data + ')"><i class="fas fa-edit"></i></button >';
                        },
                        orderable: false
                    },
                    {
                        data: 'orderCode'
                    },
                    {
                        data: 'dateCreate'
                    },
                    {
                        data: 'note'
                    },
                    {
                        data: 'total',
                        render: $.fn.dataTable.render.number(',', '.', 0, '')
                    },
                    {
                        data: 'status',
                        render: function (data) {
                            if (data == 1) {
                                return 'Đang chờ duyệt';
                            }
                            else if (data == 2) {
                                return 'Đang giao hàng';
                            }
                            else if (data == 3) {
                                return 'Đã hoàn thành';
                            }
                            else if (data == 4) {
                                return 'Đã hủy';
                            }
                        },
                        orderable: false
                    }
                ],
                destroy: true
            });
        }

        //Hàm lấy danh sách chi tiết đơn hàng theo đơn hàng
        function getOrderDetailTable(data) {
            $('#orderDetailTable').DataTable({
                ajax: {
                    url: '@Url.Action("GetOrderDetailById", "Order")/' + data,
                    type: 'GET',
                    datatype: 'json'
                },
                columns: [
                    {
                        data: 'image',
                        render: function (data) {
                            return '<img src="/Images/' + data + '" asp-append-version="true" width="100" />';
                        },
                        orderable: false,
                    },
                    {
                        data: 'productName'
                    },
                    {
                        data: 'sizeName'
                    },
                    {
                        data: 'priceBuy',
                        render: $.fn.dataTable.render.number(',', '.', 0, '')
                    },
                    {
                        data: 'amountBuy'
                    },
                    {
                        data: 'total',
                        render: $.fn.dataTable.render.number(',', '.', 0, '')
                    },
                ],
                destroy: true
            });
        }
    </script>
}