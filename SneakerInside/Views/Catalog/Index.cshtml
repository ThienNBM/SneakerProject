<!-- Input addon -->
<div class="card card-info">
    <div class="card-header">
        <h3 class="card-title">Danh sách hãng giày</h3>
    </div>
    <div class="card-body">
        <table id="catalogTable" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CatalogID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CatalogName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th style="text-align: center">
                        <a class="btn btn-success btn-sm" href="@Url.Action("Create","Catalog")"><i class="fa fa-plus-square"></i></a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CatalogID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CatalogName)
                        </td>
                        <td>
                            @if (item.Status == 1)
                            {
                                <p>Hoạt động</p>
                            }
                            else
                            {
                                <p>Không hoạt động</p>
                            }
                        </td>
                        <td style="text-align: center">
                            <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", "Catalog" ,new { id = item.CatalogID})"><i class="fa fa-edit"></i></a>
                            <button type="button" class="btn btn-danger btn-sm btn_delete" data-toggle="modal" data-target="#deleteModal">
                                <i class="fa fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

