<!-- Modal thêm, sửa-->
<div class="modal fade" id="commonModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script type="text/javascript">
        //Lấy dữ liệu lên bảng
        var dataTable;
        $(document).ready(function () {
            dataTable = $('#catalogTable').DataTable({
                processing: true,
                ajax: {
                    url: '/Catalog/GetAll',
                    dataSrc: ''
                },
                columns: [
                    { data: 'catalogID' },
                    { data: 'catalogName' },
                    {
                        data: 'status',
                        render: function (data) {
                            return data ? "Hoạt động" : "Không hoạt động";
                        }
                    },
                    {
                        data: 'catalogID',
                        render: function (data) {
                            return '<button type="button" class="btn btn-warning" onclick="showModal(' + @Url.Action("Edit", "Catalog",data,Context.Request.Scheme) + ')"><i class="fas fa-edit"></i></button>';
                        }
                    }
                ]
            });
        });

        //Hàm hiện modal thêm, sửa
        function showModal(url, title) {
            $.ajax({
                type: "GET",
                url: url,
                success: function (res) {
                    $("#commonModal .modal-body").html(res);
                    $("#commonModal .modal-title").html(title);
                    $("#commonModal").modal('show');
                }
            })
        }

        //Hàm thực hiện thêm mới
        function create(form) {
            try {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: new FormData(form),
                    contentType: false,
                    processData: false,
                    success: function (res) {
                        if (res.isValid) {
                            $("#commonModal .modal-body").html('');
                            $("#commonModal .modal-title").html('');
                            $("#commonModal").modal('hide');
                            dataTable.ajax.reload();
                        }
                        else {
                            $("#commonModal .modal-body").html(res.html);
                        }
                    },
                    error: function (err) {
                        console.log(err);
                    }
                })
            }
            catch (e) {
                console.log(e);
            }
            return false;
        }
    </script>
}