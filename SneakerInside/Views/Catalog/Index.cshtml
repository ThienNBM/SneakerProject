@section Scripts{
    <script type="text/javascript">
        //Lấy dữ liệu lên bảng
        var dataTable;
        $(document).ready(function () {
            dataTable = $('#catalogTable').DataTable({
                ajax: {
                    url: '@Url.Action("GetAll", "Catalog")',
                    type: 'GET',
                    datatype: 'json'
                },
                columns: [
                    {
                        data: 'catalogID',
                        render: function (data) {
                            return '<button type="button" class="btn btn-info" onclick="showEditModal(' + data + ')"><i class="fas fa-edit"></i></button ><button type = "button" class="btn btn-danger" style = "margin-left:5px" onclick = "showModal(' + data + ')"><i class="fas fa-trash-alt"></i></button >';
                        },
                        orderable: false,
                        width: '100px'
                    },
                    {
                        data: 'catalogName'
                    },
                    {
                        data: 'status',
                        render: function (data) {
                            return data ? "Hoạt động" : "Không hoạt động";
                        }
                    }
                ]
            });
        });

        //Hàm hiện modal thêm
        function showCreateModal() {
            $.ajax({
                type: "GET",
                url: '@Url.Action("Create", "Catalog")',
                success: function (res) {
                    $("#commonModal .modal-title").html("Thêm mới hãng giày");
                    $("#commonModal .modal-body").html(res);
                    $("#commonModal").modal('show');
                }
            })
        }

        //Hàm hiện modal sửa
        function showEditModal(data) {
            $.ajax({
                type: "GET",
                url: '@Url.Action("Edit", "Catalog")/' + data,
                success: function (res) {
                    $("#commonModal .modal-title").html("Chỉnh sửa hãng giày");
                    $("#commonModal .modal-body").html(res);
                    $("#commonModal").modal('show');
                }
            })
        }

        //Hàm thực hiện
        function submitForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: new FormData(form),
                    contentType: false,
                    processData: false,
                    success: function (res) {
                        if (res.isValid) {
                            $("#commonModal .modal-body").html('');
                            $("#commonModal .modal-title").html('');
                            $("#commonModal").modal('hide');
                            dataTable.ajax.reload();
                        }
                        else {
                            alert(res.isValid);
                        }
                    }
                });
            }
            return false;
        }
    </script>
}