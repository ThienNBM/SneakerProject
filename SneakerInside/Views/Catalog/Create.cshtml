@model SneakerInside.Models.Catalog

@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<form asp-action="Create" onsubmit="return submitCreateForm(this);" autocomplete="off">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="CatalogName" class="control-label"></label>
        <input asp-for="CatalogName" class="form-control" />
        <span asp-validation-for="CatalogName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status" class="form-control" asp-items="@ViewBag.status"></select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Thêm mới" class="btn btn-success btn-block"/>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}