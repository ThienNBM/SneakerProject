@model SneakerInside.Models.Catalog

@{
    Layout = null;
}

<form asp-action="Update" onsubmit="return submitUpdate(this);" autocomplete="off">
    <div class="form-group">
        <input type="hidden" asp-for="CatalogID" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CatalogName" class="control-label"></label>
        <input asp-for="CatalogName" class="form-control" />
        <span asp-validation-for="CatalogName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status" class="form-control" asp-items="@ViewBag.status"></select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Chỉnh sửa" class="btn btn-info btn-block"/>
    </div>
</form>