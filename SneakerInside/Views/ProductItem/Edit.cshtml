@model SneakerInside.Models.ProductItemGetAndUpdate

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-6">
    <div class="card card-warning">
        <div class="card-header">
            <h3 class="card-title">Chỉnh sửa @ViewBag.Name</h3>
        </div>
        <form asp-action="Edit">
            <div class="card-body">
                <div class="form-group">
                    <input type="hidden" asp-for="ProductItemID" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="ProductID" class="control-label"></label>
                    <select asp-for="ProductID" class="form-control" asp-items="@ViewBag.dropDownProduct"></select>
                    <span asp-validation-for="ProductID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SizeID" class="control-label"></label>
                    <select asp-for="SizeID" class="form-control" asp-items="@ViewBag.dropDownSize"></select>
                    <span asp-validation-for="SizeID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AmountStock" class="control-label"></label>
                    <input asp-for="AmountStock" class="form-control" />
                    <span asp-validation-for="AmountStock" class="text-danger"></span>
                </div>
            </div>
            <div class="card-footer">
                <input type="submit" value="Chỉnh sửa" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
